<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/listview_bg_shape">
            <stroke
                android:width="0dp"
                android:color="#51BCDA" />
            <padding
                android:bottom="0dp"
                android:left="15dp"
                android:right="15dp"
                android:top="0dp" />
            <corners android:radius="50dp" />
            <solid android:color="#51CBCE" />
            <size
                android:height="10dp" />

        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="right"
            android:src="@drawable/down_arrow">
        </bitmap>
    </item>
</layer-list>